<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bMI_analyser"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@color/Blue"
        android:padding="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/home_tv1_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, Mohammed"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="28sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current status"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:textColor="@color/Blue"
        android:textStyle="bold"
        android:layout_marginStart="20dp"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:inputType="text"
        android:layout_margin="20dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/rounded_rectangle"
        android:hint="normal (still good)"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/home_et_oldStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="old Status"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:textColor="@color/Blue"
        android:textStyle="bold"
        android:layout_marginStart="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_rv_oldStatus"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Food"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/Blue"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:padding="13dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Record"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/Blue"
            android:layout_marginLeft="47dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:padding="13dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/home_btn_viewFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:text="view Food"
        android:textSize="20sp"
        android:padding="13dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/Blue"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logout"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="57dp"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="-9dp"


        />
</LinearLayout>