<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/foodItems_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_rectangle"
            android:src="@drawable/img3"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:columnCount="2"
            android:rowCount="3"
            android:background="@drawable/rounded_rectangle">

            <TextView
                android:id="@+id/foodItems_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salmon"
                android:gravity="center_vertical"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/foodItems_btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="@color/Blue"
                android:textAllCaps="false"
                android:layout_columnSpan="1"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/foodItems_tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fish"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-5dp"/>

            <TextView
                android:id="@+id/foodItems_tv_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 cal/g"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/foodItems_img_delete"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/close"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginRight="4dp"
                android:background="@color/Blue"
                android:layout_columnSpan="1"
                android:layout_gravity="right"/>

        </GridLayout>

    </LinearLayout>


</LinearLayout>